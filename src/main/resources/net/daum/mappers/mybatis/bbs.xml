<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Bbs">

   <!-- 시퀀스 번호값 가져오기 -->
   <select id="bbsSeq_no" resultType="int">
     select bbs_no_seq.nextval from dual
   </select>
   
   <!-- 자료실 저장 -->
   <insert id="bbs_in" parameterType="bbs">
     <!-- parameterType 속성은 전달인자 타입이고 생략가능하다. -->
     insert into bbs (bbs_no,bbs_name,bbs_title,bbs_pwd,bbs_cont,bbs_file,
     bbs_hit,bbs_ref,bbs_step,bbs_level,bbs_date) values(bbs_no_seq.nextval,
     #{bbs_name},#{bbs_title},#{bbs_pwd},#{bbs_cont},#{bbs_file},0,
     bbs_no_seq.nextval,0,0,sysdate)
   </insert>
   
   <!-- 검색전후 레코드 개수 -->
   <select id="bbs_count" resultType="int" 
   parameterType="net.daum.vo.PageVO">
     <!-- resultType은 반환타입 속성이고 생략불가 -->
     select count(bbs_no) from bbs
     <where> <!-- 검색조건에 의한 검색기능 -->
      <if test="find_field == ''"></if> <!-- 검색을 안한경우는 총레코드개수를 반환 -->
      <if test="find_field == 'bbs_title'"> <!-- 제목 검색 -->
       bbs_title like #{find_name} <!-- like는 ~와 비슷한 레코드를 검색하게 하는
       검색연산자 이다. -->
      </if>
      <if test="find_field == 'bbs_cont'"> <!-- 내용 검색 -->
       bbs_cont like #{find_name}
      </if>
     </where>   
   </select>
   
   <!-- 검색전후 페이징 목록 -->
   <select id="bbs_list" parameterType="page" resultType="bbs">
     select * from (
       select rowNum rNum, bbs_no, bbs_name, bbs_title, bbs_hit,
       bbs_ref,bbs_step,bbs_level,bbs_date from (select * from bbs 
       
     <where> <!-- 검색조건에 의한 검색기능 -->
      <if test="find_field == ''"></if> <!-- 검색을 안한경우는 총레코드개수를 반환 -->
      <if test="find_field == 'bbs_title'"> <!-- 제목 검색 -->
       bbs_title like #{find_name} <!-- like는 ~와 비슷한 레코드를 검색하게 하는
       검색연산자 이다. -->
      </if>
      <if test="find_field == 'bbs_cont'"> <!-- 내용 검색 -->
       bbs_cont like #{find_name}
      </if>
     </where> 
     
       order by bbs_ref desc, bbs_level asc))
     where rNum &gt;= #{startrow} and rNum &lt;= #{endrow}
     <!-- &gt;은 >, &lt;은 < -->  
   </select>
   
   <!-- 조회수 증가 -->
   <update id="bbs_hi">
      update bbs set bbs_hit = bbs_hit + 1 where bbs_no = #{bbs_no}
   </update>
   
   <!-- 내용보기 -->
   <select id="bbs_co" resultType="bbs">
      select * from bbs where bbs_no = #{bbs_no}   
   </select>
   
   <!-- 답변 레벨 증가 -->
   <update id="levelUp">
      update bbs set bbs_level=bbs_level+1 where bbs_ref=#{bbs_ref}
      and bbs_level > #{bbs_level}
   </update>
   
   <!-- 답변 저장 -->
   <insert id="reply_in2" parameterType="bbs">
      insert into bbs (bbs_no,bbs_name,bbs_title,bbs_pwd,bbs_cont,
      bbs_hit,bbs_ref,bbs_step,bbs_level,bbs_date) values(
      bbs_no_seq.nextval,#{bbs_name},#{bbs_title},#{bbs_pwd},
      #{bbs_cont},0,#{bbs_ref},#{bbs_step}+1,#{bbs_level}+1,sysdate)   
   </insert>
   
   <!-- 자료실 수정 -->
   <update id="bbs_edit">
      update bbs set bbs_name=#{bbs_name},bbs_title=#{bbs_title},
      bbs_cont=#{bbs_cont},bbs_file=#{bbs_file} where bbs_no=#{bbs_no}
   </update>
   
   <!-- 삭제 -->
   <delete id="bbs_del">
      delete from bbs where bbs_no=#{bbs_no}   
   </delete>
</mapper>



































