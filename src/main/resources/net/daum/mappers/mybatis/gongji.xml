<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Gongji"> <!-- 사용자 공지사항 -->

  <!-- 최신 공지글 5개 목록보기 -->
  <select id="g_list" resultType="gongji">
   select * from (select gongji_no,gongji_title,gongji_date 
   from gongji order by gongji_no desc)
    where rownum &lt; 6 <!-- &lt;은 < -->
  </select>
  
  <!-- 조회수 증가 -->
  <update id="g_hit">
    update gongji set gongji_hit = gongji_hit + 1 where gongji_no = #{gongji_no}
  </update>
  
  <!-- 공지내용 보기 -->
  <select id="g_cont" parameterType="int" resultType="net.daum.vo.GongjiVO">
    select * from gongji where gongji_no = #{gongji_no}  
  </select>
  
</mapper>






